<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.board.dao.IPdsDAO">
	<sql id="pdsColumns">
		PDS_NO,    BO_NO,    PDS_FILENAME,
	    PDS_SAVEPATH,    PDS_MIME,    
	    PDS_SIZE,		 PDS_FANCYSIZE
	</sql>

	<select id="selectPds" parameterType="int" resultType="PdsVO">
		SELECT 
			<include refid="pdsColumns" />
		FROM PDS
		WHERE PDS_NO = #{pds_no}
	</select>
	
	<select id="selectPdsList" parameterType="BoardVO" resultType="PdsVO">
		SELECT PDS_NO, PDS_SAVEPATH
		FROM PDS
		WHERE PDS_NO IN 
		<foreach collection="deletePdsNos" item="delPdsNo" open="(" close=")" separator=",">
			#{delPdsNo}		
		</foreach>
	</select>

	<insert id="insertPdsAll" parameterType="BoardVO">
		<selectKey resultType="int" keyProperty="startPdsNo" order="BEFORE">
			SELECT NVL(MAX(PDS_NO), 0)+1  FROM PDS
		</selectKey>
		INSERT ALL
		<foreach collection="pdsList" item="pds" index="idx">
			INTO PDS (
			    <include refid="pdsColumns" />
			) VALUES (
			    #{startPdsNo}+#{idx},    
			    #{bo_no},    #{pds.pds_filename},
			    #{pds.pds_savepath},    #{pds.pds_mime,jdbcType=VARCHAR},    
			    #{pds.pds_size},	    #{pds.pds_fancysize}
			)
		</foreach>
		SELECT * FROM DUAL
	</insert>

	<insert id="insertPds" parameterType="PdsVO">
		INSERT INTO PDS (
		    <include refid="pdsColumns" />
		) VALUES (
		    PDS_SEQ.NEXTVAL,    #{bo_no},    #{pds_filename},
		    #{pds_savepath},    #{pds_mime,jdbcType=VARCHAR},    
		    #{pds_size},	    #{pds_fancysize}
		)
	</insert>
	
	<delete id="deletePds" parameterType="int">
		DELETE FROM PDS
		WHERE PDS_NO = #{pds_no}
	</delete>
	
	<delete id="deletePdsAll" parameterType="BoardVO">
		DELETE FROM PDS
		WHERE PDS_NO IN 
		<foreach collection="deletePdsNos" item="delPdsNo" open="(" close=")" separator=",">
			#{delPdsNo}		
		</foreach>
	</delete>
</mapper>









